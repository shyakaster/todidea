<div class="users index">
  <%= link_to('<< Back to menu',{:controller => 'access',:action => 'index',:class=>'Back link'}) %>
  <h2>Users list</h2>
  <%= link_to("New user",{:action=>'new'}, :class => 'action new') %>
  <div><%= pluralize(@users.size,'user') %></div>
  <table class="listing", summary="Users list">
    <tr class="header">
      <th>&nbsp;</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Visible</th>
    </tr>
    <% @users.each do |user|%>
        <tr class="<%= cycle('odd','even') %>">
          <td><%=user.position%></td>
          <td><%=user.first_name%></td>
          <td><%=user.last_name%></td>
          <td><%=user.email%></td>
          <td><%=user.visible%></td>
          <td class="action">
            <%=link_to('Show',{:action=>'show',:id=>user.id}, :class=>'action show')%>
            <%=link_to('Edit',{:action=>'edit', :id=>user.id}, :class=>'action edit')%>
            <%=link_to('Delete',{:action=>'delete', :id=>user.id}, :class=>'action delete')%>

          </td>
        </tr>
    <%end%>
  </table>
</div>